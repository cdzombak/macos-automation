#!/usr/bin/env bash
set -e

urlencode() {
    # from https://gist.github.com/cdown/1163649
    # urlencode <string>

    old_lc_collate=$LC_COLLATE
    LC_COLLATE=C

    local length="${#1}"
    for (( i = 0; i < length; i++ )); do
        local c="${1:$i:1}"
        case $c in
            [a-zA-Z0-9.~_-]) printf '%s' "$c" ;;
            *) printf '%%%02X' "'$c" ;;
        esac
    done

    LC_COLLATE=$old_lc_collate
}

Q=$(urlencode "git $(echo "$@") tutorial")
open "https://google.com/search?q=$Q"
