#!/usr/bin/env bash

if ping -c 2 curie-srv.local >/dev/null ; then
  if [ -d "$HOME/Music/iTunes/" ]; then
    rsync -av --delete --whole-file --exclude '.DS_Store' --exclude 'Album Artwork/Cache' --exclude 'Previous iTunes Libraries' "$HOME/Music/iTunes/" curie-srv.local:/Users/cdzombak/Music/iTunes/
  fi
else
  echo "[!] Cannot contact curie-srv.local on the network."
  exit 1
fi
